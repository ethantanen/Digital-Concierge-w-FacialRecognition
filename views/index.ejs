<!DOCTYPE html>
<html>

<head>
  <title> CALVIN </title>
  <link rel="stylesheet" href="bootstrap.css">
  <link rel="stylesheet" href="style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="script.js"></script>
</head>

<body style="background-color: lightgray">
  <div class="container">
    <!-- Begin Calvin Header -->
    <div class="row">
      <div class="col-lg-5"></div>
      <div class="col-lg-2">
        <img id="image" alt="calvin" src='Calvin.png'>
      </div>
      <div class="col-lg-5"></div>
    </div>
    <!-- End Calvin Header -->

    <div class="row">

      <!-- Begin Video Elements -->
      <div class="col-lg-4">
        <div class="row">
          <div id="photo">
            <video id="videos" width="400" height="300" autoplay></video>
          </div>
          <div id="photo">
            <canvas id="canvas" width="400" height="300"></canvas>
            <img id="bulldog" src="bulldog.jpg"></img>
          </div>
        </div>
        <div class="row">
          <button id="snap" class="btn btn-primary">Snap Photo</button>
          <button id="send" class="btn btn-success">Send Photo</button>
        </div>
      </div>
      <!-- End Video Elements -->
      <div class="col-lg-8">
        <div class="row">
          <!-- Respond to Prompts Form -->
          <div id="response-box">
            <div id="scrollList" style="width:100%;height:350px;overflow-y: auto; flex-grow: 1">
              <li id="thingToAppend" style="list-style: none;"></li>

            </div>
            <div class="input-group">
              <span class="input-group-addon "> Text </span>
              <input id="response" autocomplete="off" name="text" type="text" class="form-control" placeholder="Talk to Calvin">
            </div>
            <br>
            <button id="conversation" type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button style="display: none" id="makeTextBox"></button>
  <audio id="audio"> </audio>
</body>

</html>